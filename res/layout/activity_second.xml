<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:launcher="http://schemas.android.com/apk/res/com.android.launcher"
          android:id="@+id/activitysecond"
		android:layout_width="fill_parent"
  		android:layout_height="fill_parent" 
  			
  		>
<com.nd2.DragLayer
     android:layout_marginTop="0dip" 
    android:id="@+id/drag_layer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0" 
    >

    <com.nd2.DeleteZone
        android:id="@+id/delete_zone_view"
        android:layout_width="200dp"
        android:layout_height="100dp"
               android:layout_gravity="center" 
        android:src="@drawable/delete_zone" />

    <GridView
        android:id="@+id/image_grid_view"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="30dip"
        android:background="@color/grid_background"
        android:horizontalSpacing="1dip"
        android:numColumns="@integer/num_columns"
        android:verticalSpacing="1dip" >
    </GridView>

<LinearLayout
    android:id="@+id/bottom_part"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.2"
    android:orientation="horizontal"
    android:weightSum="1.0" >

    <FrameLayout
        android:id="@+id/image_source_frame"
        android:layout_width="45dp"
        android:layout_height="55dp" >

        <ImageView
            android:layout_width="fill_parent"
               android:layout_height="55dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout01"
         android:layout_width="45dp"
        android:layout_height="55dp" >

        <ImageView
            android:layout_width="fill_parent"
               android:layout_height="55dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout02"
         android:layout_width="45dp"
        android:layout_height="55dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="55dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout03"
         android:layout_width="45dp"
        android:layout_height="55dp" >

        <ImageView
            android:layout_width="fill_parent"
                android:layout_height="55dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout04"
        android:layout_width="45dp"
        android:layout_height="55dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="55dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout05"
        android:layout_width="45dp"
        android:layout_height="55dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="55dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout06"
       android:layout_width="45dp"
        android:layout_height="55dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="55dp" />
    </FrameLayout>

</LinearLayout>

</LinearLayout>

</LinearLayout>

<Button
    android:id="@+id/button1"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClickAddImage"
    android:text="next"
    android:visibility="visible" />

</com.nd2.DragLayer>



</FrameLayout>
